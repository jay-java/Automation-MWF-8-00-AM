package core;

import java.util.InputMismatchException;
import java.util.Scanner;

public class P012_Exception {
	public static void main(String[] args) {
		try {
			Scanner sc = new Scanner(System.in);
			System.out.println("enter num 1 : ");
			int num1 = sc.nextInt();
			System.out.println("enter num 2 : ");
			int num2 = sc.nextInt();
			int num3 = num1 / num2;
			System.out.println("num 3 : " + num3);
		} catch (ArithmeticException e) {
			System.out.println("denominator should be greater than 0");
		} catch (InputMismatchException e) {
			System.out.println("denominator should be numeric value");
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			System.out.println("this will executes everytime");
		}
	}
}
